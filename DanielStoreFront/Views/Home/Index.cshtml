@{
    ViewData["Title"] = "Home Page";
}

<div>


    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" interval="300">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/MushroomCloud.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Deliver radioactive fury the old-fashioned way!</h5>
                    <p>Get up close and personal with our selection of conventional bombs.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/MM3.jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Tell the whole world you mean business</h5>
                    <p>Guaranteed devastation delivered in 3 hours or less!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/DavyCrockett.jpg" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Keep 'em off your lawn!</h5>
                    <p>Nuclear artillery for when you don't need to hit another continent.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/RadioactiveDrums.jpg" alt="Fourth slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Roll your own!</h5>
                    <p>Nuclear materials and housings for all you mad-scientist types!</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


</div>
