<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />


    <title>Checkout</title>
</head>
<body>

    <form class="needs-validation" novalidate name="CheckoutForm" method="post">
        @Html.AntiForgeryToken()
        <h2>Billing Information</h2>
        <div class="row" name="BillingInfo">
        </div>
        <div class="form-row">

            <div class="col-md-4 mb-3">
                <label for="validationTooltip01">First name</label>
                <input type="text" name="BillingFirstName" class="form-control" id="validationTooltip01" placeholder="First name" value="Mark" required>
                <div class="valid-tooltip">
                    Looks good!
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <label for="validationTooltip02">Last name</label>
                <input type="text" name="BillingLastName" class="form-control" id="validationTooltip02" placeholder="Last name" value="Otto" required>
                <div class="valid-tooltip">
                    Looks good!
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="validationTooltip03">City</label>
                <input type="text" name="BillingCity" class="form-control" id="validationTooltip03" placeholder="City" required>
                <div class="invalid-tooltip">
                    Please provide a valid city.
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <label for="validationTooltip04">State</label>
                <input type="text" name="BillingState" class="form-control" id="validationTooltip04" placeholder="State" required>
                <div class="invalid-tooltip">
                    Please provide a valid state.
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <label for="validationTooltip05">Zip</label>
                <input type="text" name="BillingZip" class="form-control" id="validationTooltip05" pattern="^\d{5}(?:[-\s]\d{4})?" placeholder="Zip" required>
                <div class="invalid-tooltip">
                    Please provide a valid zip.
                </div>
            </div>
        </div>

        <h2>Shipping Information</h2>
        <div class="row" name="ShippingInfo">
        </div>
        <div class="form-row">

            <div class="col-md-4 mb-3">
                <label for="validationTooltip01">First name</label>
                <input type="text" name="ShippingFirstName" class="form-control" id="validationTooltip01" placeholder="First name" value="Mark" required>
                <div class="valid-tooltip">
                    Looks good!
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <label for="validationTooltip02">Last name</label>
                <input type="text" name="ShippingLastName" class="form-control" id="validationTooltip02" placeholder="Last name" value="Otto" required>
                <div class="valid-tooltip">
                    Looks good!
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="validationTooltip03">City</label>
                <input type="text" name="ShippingCity" class="form-control" id="validationTooltip03" placeholder="City" required>
                <div class="invalid-tooltip">
                    Please provide a valid city.
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <label for="validationTooltip04">State</label>
                <input type="text" name="ShippingState" class="form-control" id="validationTooltip04" placeholder="State" required>
                <div class="invalid-tooltip">
                    Please provide a valid state.
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <label for="validationTooltip05">Zip</label>
                <input type="text" name="ShippingZip" class="form-control" id="validationTooltip05" pattern="^\d{5}(?:[-\s]\d{4})?" placeholder="Zip" required>
                <div class="invalid-tooltip">
                    Please provide a valid zip.
                </div>
            </div>
            <button class="btn btn-light">Validate Address</button>
            <div class="alert alert-success">
                <span>Valid</span>
            </div>
            <div class="alert alert-warning">
                <span>Invalid</span>
            </div>
        </div>

        <h2>Payment Info</h2>
        <div class="form-group">
            <label for="creditcardnumber">Credit Card</label>
            <input type="text" name="creditcardnumber" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="creditcardname">Name On Card</label>
            <input type="text" name="creditcardname" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="creditcardverificationvalue">CVV</label>
            <input type="text" name="creditcardverificationvalue" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="expirationmonth">Expiration</label>
            <div class="form-row">


                <div class="col">
                    <select name="expirationmonth" class="form-control" required>
                        <option value="01">01</option>
                        <option value="02">02</option>
                        <option value="03">03</option>
                        <option value="04">04</option>
                        <option value="05">05</option>
                        <option value="06">06</option>
                        <option value="07">07</option>
                        <option value="08">08</option>
                        <option value="09">09</option>
                        <option value="10">10</option>
                        <option value="11">11</option>
                        <option value="12">12</option>
                        <option value="01">01</option>
                    </select>
                </div>
                <div class="col">
                    <select name="expirationyear" class="form-control" required>
                        <option value="2018">2018</option>
                        <option value="2019">2019</option>
                        <option value="2020">2020</option>
                        <option value="2021">2021</option>
                    </select>
                </div>
            </div>
        </div>

        @section Scripts{
        <script type="text/javascript">
            $(document).ready(() => {
                $('form').submit((event) => {
                    if (event.target.checkValidity() == false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    $(event.target).addClass('was-validated');
                })
            });

        </script>
        }




    </form>


</body>
</html>