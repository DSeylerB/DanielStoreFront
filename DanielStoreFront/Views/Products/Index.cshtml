@model DanielStoreFront.Models.ProductsViewModel[]
@{
    ViewData["Title"] = "Index";
}
<!--./Views/Products/index.cshtml/-->
@foreach (var product in Model)
{
<h2>@product.Name</h2>
    <div class="row">
        <div class="col-4">
            <img src=" " alt="@product.Name" sizes=" = 300" />
        </div>
        <div class="col-8">
            <dl>
                <dt>Explosive Yield</dt>
                <dd>@product.ExplosiveYield Kilotons</dd>
                <dt>Description</dt>
                <dd>@product.Description</dd>
                <dt>Price</dt>
                <dd>@product.Price.ToString("c")</dd>
            </dl>
            <form asp-action="index" asp-controller="Products">
                <input type="hidden" name="id" value="@product.Name" />
                <input type="Submit" value="Give me a Bomb!" />
            </form>
        </div>
    </div>
}